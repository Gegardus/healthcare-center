<h1>Select your doctor</h1>

<% @display_doctors.each do |doc| %>
  <%= link_to new_appointment_path(doctor_id: doc.id), class: "btn btn-link" do %>
        <li class="card left">
          <div class="card">
            <p>Click here to make an appointment with this physician</p>
            <a><%= image_tag doc.image, class: 'rounded-circle shadow-lg d-block mx-auto', width: 160, height: 160 %></a>
             <p>Doctor ID: <strong><%= doc.id %></strong></p>
            <h5><strong><%= doc.full_name %></strong></h5>
          </div>
          </li>
          <p>Your ID <strong><%= current_user.id %></strong></p>
          <h5><strong>Appointments: </strong> <%= doc.appointments.count %></h5>
  <% end %>
<% end %>