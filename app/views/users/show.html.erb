<h1 class="text-center">Select your doctor</h1>

<% @display_doctors.each do |doc| %>
  <%= link_to new_appointment_path(doctor_id: doc.id), class: "btn btn-link" do %> 
  <ul class="list-unstyled">
        <li class="card left">
          <div class="card">
            <p class="link-black text-center">Here can make an appointment with this physician</p>
            <a><%= image_tag doc.image, class: 'rounded-circle shadow-lg d-block mx-auto', width: 160, height: 160 %></a>
            <p class="m-2">Speciality: <strong><%= @category.name%></strong></p>
            <h5 class="m-2 p-1">Doctor <strong><%= doc.full_name %></strong></h5>
          </div>
          </li> 
          </ul>     
          <h5 class="mt-2 p-2"><strong>Appointments: </strong> <%= doc.appointments.count %></h5>
  <% end %>
<% end %>
