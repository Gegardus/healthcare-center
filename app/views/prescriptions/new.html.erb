<%= link_to doctor_path(@user.id), class: "btn btn-link" do %>
    <p class="link-black text-center"><strong>back</strong></p>
<% end %>


<section>

  <h1 class="text-center">Add a new prescription</h1>
  
  <%= turbo_frame_tag "create_prescription_form" do %>  
   <%= form_with model: @prescription, url: prescriptions_path, class: "card left" do |form| %> 
   <p class="m-2 p-1">Write your prescript for patient: <strong><%= @appointment.user.full_name %></strong></p>  
   <%= form.hidden_field :appointment_id,  value: @appointment.id%>  <br>  
   <%= render "form", prescription: @prescription %>
  <% end %>
 <% end %>

</section>

